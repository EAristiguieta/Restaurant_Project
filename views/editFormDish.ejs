<%- include("head") %>
<link rel="stylesheet" href="/stylesheets/registerRestaurant.css" />
<%- include("navbar") %>

<title>Formulario creacion de platos</title>

<main class="container-fluid">
  <section class="row prueba">
    <div class="col ">
      <h1>Formulario de edicion de platos</h1>
      <form
        action="/dish/editDish/<%= result[0].dish_id %>/<%= result[0].restaurant_id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <input
          type="text"
          name="dish_name"
          placeholder="Nombre del plato"
          value="<%= result[0].dish_name %>"
        />
        <input
          type="text"
          name="dish_description"
          placeholder="Descripcion"
          value="<%= result[0].dish_description %> "
        />
        <label class="label-img" for="file">Sube una imagen</label>
        <input type="file" name="img" id="file" hidden />
        <h3><%= typeof message != "undefined" ? message : null %></h3>
        <button class="btn buttons">Aceptar</button>
        <button class="btn buttons" type="reset">Limpiar</button>
        <a href="/restaurant"
          ><button class="btn buttons" type="button">Cancelar</button></a
        >
      </form>
    </div>
  </section>
</main>

<%- include("footer") %>
